<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SocialApp.Windows.GroupWindow.GroupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialApp.Windows.GroupWindow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GroupWindow">

    <Grid x:Name="RootGrid" Background="#222831">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid 
            Grid.Row="0"
            Background="#393E46"
            Padding="20"
            MinHeight="40">
            <Button 
                x:Name="HomeButton"
                Content="Home" 
                FontSize="24" 
                Foreground="#EEEEEE" 
                Background="#393E46"
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                FontFamily="Segoe Script"/>
            <Button 
                x:Name="CreatePostButton"
                Content="Create Post" 
                FontSize="24" 
                Foreground="#EEEEEE" 
                Background="#393E46"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontFamily="Segoe Script"/>
            <Button 
                x:Name="GroupsButton"
                Content="Groups" 
                FontSize="24" 
                Foreground="#EEEEEE" 
                Background="#393E46"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                FontFamily="Segoe Script"/>
        </Grid>

        <!-- Main Content -->
        <Grid
            Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Top" 
                HorizontalAlignment="Center" 
                Background="#393E46" 
                Padding="20" 
                CornerRadius="10" 
                Width="800">
                <Image
                    x:Name="GroupImage"/>
                <TextBlock
                    x:Name="GroupTitle"
                    FontSize="24" 
                    FontFamily="Segoe Script"
                    Text="[TITLE]"/>
                <TextBlock
                    x:Name="GroupDescription"
                    Text="[DESCRIPTION]"/>
            </StackPanel>
        </Grid>
        
    </Grid>
</Window>
