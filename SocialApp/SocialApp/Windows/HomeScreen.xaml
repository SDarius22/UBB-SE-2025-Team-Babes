<Page
    x:Class="SocialApp.HomeScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialApp"
    xmlns:components="using:SocialApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Background="#222831">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid 
            Grid.Row="0"
            Background="#393E46"
            Padding="20"
            MinHeight="40">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border 
                x:Name="Logo"
                Grid.Column="0"
                Width="40" 
                Height="40" 
                CornerRadius="20"
                HorizontalAlignment="Left"
                Background="Red">
                <Image 
                    Source="../Assets/Logo.png" 
                    Stretch="UniformToFill"/>
            </Border>

            <Grid
                Grid.Column="1"
                Padding="100 0 100 0">
                <Button 
                    x:Name="HomeButton"
                    Content="Home" 
                    FontSize="24" 
                    Foreground="#EEEEEE" 
                    Background="#393E46"
                    BorderThickness="0"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    FontFamily="Segoe Script"/>
                <Button 
                    x:Name="CreatePostButton"
                    Content="Create Post" 
                    FontSize="24" 
                    Foreground="#EEEEEE" 
                    Background="#393E46"
                    BorderThickness="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    FontFamily="Segoe Script"/>
                <Button 
                    x:Name="GroupsButton"
                    Content="Groups" 
                    FontSize="24" 
                    Foreground="#EEEEEE" 
                    Background="#393E46"
                    BorderThickness="0"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    FontFamily="Segoe Script"/>
            </Grid>

            <Border 
                x:Name="User"
                Grid.Column="2"
                Width="40" 
                Height="40" 
                CornerRadius="20"
                HorizontalAlignment="Right">
                <Image 
                    Source="../Assets/User.png" 
                    Stretch="UniformToFill"
                    HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="74*"/>
                <ColumnDefinition Width="13*"/>
            </Grid.ColumnDefinitions>
            <components:PostComponent Grid.Column="1" Margin="10"/>
        </Grid>
    </Grid>
</Page>

