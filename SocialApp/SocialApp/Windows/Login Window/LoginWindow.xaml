<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SocialApp.Windows.Login_Window.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialApp.Windows.Login_Window"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LoginWindow">

    <Grid Background="#222831">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top bar row -->
            <RowDefinition Height="*"/>
            <!-- Form row, takes remaining space -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid 
            Grid.Row="0"
            Background="#393E46"
            Padding="20"
            MinHeight="40">
            <TextBlock 
                Text="Login" 
                FontSize="24" 
                Foreground="#EEEEEE" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontFamily="Segoe Script"/>
        </Grid>

        <!-- Form -->
        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            Background="#393E46" 
            Padding="20" 
            CornerRadius="10" 
            Width="300">
            <!-- Email TextBox -->
            <TextBox 
                PlaceholderText="Enter your email..." 
                Width="250" 
                Margin="0,0,0,20" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                BorderThickness="0"
                RequestedTheme="Dark"/>


            <!-- Password TextBox -->
            <TextBox 
                PlaceholderText="Enter your password..." 
                Width="250" 
                Margin="0,0,0,20" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                BorderThickness="0"
                RequestedTheme="Dark"/>
            
            <!-- Error TextBox -->
            <TextBlock
                Width="250" 
                Margin="0,0,0,20" 
                Foreground="Red"/>

            <!-- Continue Button -->
            <Button 
                Content="Login" 
                HorizontalAlignment="Center" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                Padding="10,5" 
                CornerRadius="5"/>
        </StackPanel>
    </Grid>
</Window>
