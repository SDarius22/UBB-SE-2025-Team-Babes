<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SocialApp.Windows.UserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialApp.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="UserWindow">

    <Grid x:Name="RootGrid" Background="#222831">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid 
            Grid.Row="0"
            Background="#393E46"
            Padding="20"
            MinHeight="40">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border 
                x:Name="Logo"
                Grid.Column="0"
                Width="40" 
                Height="40" 
                CornerRadius="20"
                HorizontalAlignment="Left"
                Background="Red">
                <Image 
                    Source="../Assets/Logo.png" 
                    Stretch="UniformToFill"/>
            </Border>

            <Grid
                Grid.Column="1"
                Padding="100 0 100 0">
                <Button 
                    x:Name="HomeButton"
                    Content="Home" 
                    FontSize="24" 
                    Foreground="#EEEEEE" 
                    Background="#393E46"
                    BorderThickness="0"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    FontFamily="Segoe Script"/>
                <Button 
                    x:Name="CreatePostButton"
                    Content="Create Post" 
                    FontSize="24" 
                    Foreground="#EEEEEE" 
                    Background="#393E46"
                    BorderThickness="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    FontFamily="Segoe Script"/>
                <Button 
                    x:Name="GroupsButton"
                    Content="Groups" 
                    FontSize="24" 
                    Foreground="#EEEEEE" 
                    Background="#393E46"
                    BorderThickness="0"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    FontFamily="Segoe Script"/>
            </Grid>

            <Border 
                x:Name="User"
                Grid.Column="2"
                Width="40" 
                Height="40" 
                CornerRadius="20"
                HorizontalAlignment="Right">
                <Image 
                    Source="../Assets/User.png" 
                    Stretch="UniformToFill"
                    HorizontalAlignment="Center"/>
            </Border>

        </Grid>
        <!-- Main Content -->
        <Grid
            Grid.Row="1">

            <StackPanel
                Orientation="Vertical">
                <Border
                    Background="White"
                    MaxHeight="200">
                    <Image
                        x:Name="ProfileImage"
                        Stretch="Uniform"
                        Source="../Assets/User.png"/>
                </Border>

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition MinWidth="800"/>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Orientation="Vertical"
                        Background="#222831"
                        HorizontalAlignment="Center"
                        Grid.Column="1">
                        <TextBlock
                            x:Name="Username"
                            Text="User Name" 
                            FontFamily="Segoe Script"
                            TextAlignment="Center"
                            FontSize="24" 
                            Foreground="#00ADB5"/>

                        <Button
                            x:Name="FollowLogOutButton"
                            Background="#D9D9D9"
                            Foreground="Black"
                            Content="Follow/LogOut"/>
                    </StackPanel>

                    <StackPanel
                        x:Name="SideButtons"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Padding="10 50 0 0">
                        <Button
                            x:Name="PostsButton"
                            Background="#D9D9D9"
                            Foreground="Black"
                            Content="Posts"
                            Margin="0 20 0 0"
                            Width="100"
                            CornerRadius="5"/>
                        <Button
                            x:Name="WorkoutsButton"
                            Background="#D9D9D9"
                            Foreground="Black"
                            Content="Workouts"
                            Margin="0 20 0 0"
                            Width="100"
                            CornerRadius="5"/>
                        <Button
                            x:Name="MealsButton"
                            Background="#D9D9D9"
                            Foreground="Black"
                            Content="Meals"
                            Margin="0 20 0 0"
                            Width="100"
                            CornerRadius="5"/>
                        <Button
                            x:Name="FollowersButton"
                            Background="#D9D9D9"
                            Foreground="Black"
                            Content="Followers"
                            Margin="0 20 0 0"
                            Width="100"
                            CornerRadius="5"/>
                    </StackPanel>
                    
                </Grid>
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
